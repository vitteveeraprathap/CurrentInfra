name: Deploy IIoT Bicep

on:
  push:
    branches:
      - main

env:
  RESOURCE_GROUP: sandbox1

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: 'Login to Azure'
        uses: azure/login@v2
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      - name: Install Azure CLI Bicep tooling
        run: |
          az extension add --name bicep || true
          az bicep install || true

      - name: Deploy Bicep to Resource Group
        run: |
          az deployment group create \
            --resource-group ${{ env.RESOURCE_GROUP }} \
            --template-file main.bicep \
            --parameters @parameters.json
